@model IEnumerable<VendasModel>

@{
    ViewData["title"] = "Vendas";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Vendas</h1>
        <div>
            <a class="btn btn-success mx-2" asp-controller="Venda" asp-action="Exportar"><i class="bi bi-cloud-download mx-2"></i></i>Exportar</a>
            <a class="btn btn-success mx-2" asp-controller="Venda" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus mx-2"></i>Cadastrar nova venda</a>
        </div>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table class="table table-light table-hover mt-4" id="Vendas">
        <thead>
            <tr>
                <th scope="col">Comprador</th>
                <th scope="col">Vendedor</th>
                <th scope="col">Peça</th>
                <th scope="col">Data Venda</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var venda in Model)
                {
                    <tr>
                        <td scope="row">@venda.Comprador</td>
                        <td scope="row">@venda.Vendedor</td>
                        <td scope="row">@venda.PecaVendida</td>
                        <td scope="row">@venda.DataVenda</td>
                        <td>
                            <a asp-controller="Venda" asp-action="Editar" asp-route-id="@venda.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a asp-controller="Venda" asp-action="Excluir" asp-route-id="@venda.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>