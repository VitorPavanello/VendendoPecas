@model IEnumerable<VendasModel>

@{
    ViewData["title"] = "Vendas";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Vendas</h1>
        <a class="btn btn-success mx-2" asp-controller="Venda" asp-action="Cadastrar">Cadastrar nova venda</a>
    </div>
    <table class="table table-dark table-hover"
        <thead>
            <tr>
                <th scope="col">Comprador</th>
                <th scope="col">Vendedor</th>
                <th scope="col">Peça</th>
                <th scope="col">Última Atualização</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach(var venda in Model)
                {
                    <tr>
                        <td scope="row">@venda.Comprador</td>
                        <td scope="row">@venda.Vendedor</td>
                        <td scope="row">@venda.PecaVendida</td>
                        <td scope="row">@venda.DataUltimaAtualizacao</td>
                        <td>
                            <a asp-controller="Venda" asp-action="Editar" asp-route-id="@venda.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Venda" asp-action="Excluir" asp-route-id="@venda.Id" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>