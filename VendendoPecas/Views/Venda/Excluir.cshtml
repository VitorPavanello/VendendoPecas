@model VendasModel
@{
    ViewData["title"] = "Excluir Venda";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Exclusão de Venda</h1>
    </div>

    <form method="post" asp-controller="Venda" asp-action="Excluir">
        <input type="hidden" asp-for="Id" />

        <h2 class="text-danger mb-4">Tem certeza que deseja excluir a venda?</h2>

        <div class="mb-3">
            <label for="Comprador" class="form-label text-light">Comprador:</label>
            <input type="text" class="form-control text-light" asp-for="Comprador" id="Comprador" placeholder="Quem está comprando?" disabled />
            <span class="text-danger" asp-validation-for="Comprador"></span>
        </div>

        <div class="mb-3">
            <label for="Vendedor" class="form-label text-light">Vendedor:</label>
            <input type="text" class="form-control text-light" asp-for="Vendedor" id="Vendedor" placeholder="Quem está vendendo?" disabled />
            <span class="text-danger" asp-validation-for="Vendedor"></span>
        </div>

        <div class="mb-3">
            <label for="PecaVendida" class="form-label text-light">Nome da Peça:</label>
            <input type="text" class="form-control text-light" asp-for="PecaVendida" id="PecaVendida" placeholder="Qual peça está sendo vendida?" disabled />
            <span class="text-danger" asp-validation-for="PecaVendida"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <a class="btn btn-primary w-50" asp-controller="Venda" asp-action="Index">Voltar</a>
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
        </div>
    </form>
</div>